{% import 'backend/macro/image.html.twig' as images %}

<div class="card">
    <div class="image">
        {% if animal.firstImage is not null %}
            {% set path = vich_uploader_asset(animal.firstImage, 'file') %}
            {{ images.render(path, 'animal_grid', animal.name) }}
        {% endif %}
    </div>
    <div class="content">
        <a class="header" href="{{ path('app_frontend_animal_show', { 'slug': animal.slug }) }}">{{ animal.name }}</a>
        <div class="meta">
            <a>{{ animal.taxon.name }}</a>
        </div>
        <div class="description">
            {{ animal.description|truncate(100, true) }}
        </div>
    </div>
    <div class="extra content">
          <span class="right floated">
            {{ animal.size }} {{ animal.sizeUnit }}
          </span>
        <span>
            <i class="eye icon"></i>
            {{ ('app.ui.' ~ animal.mainColor)|trans }}
          </span>
    </div>
</div>
