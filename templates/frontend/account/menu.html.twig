{% extends 'knp_menu.html.twig' %}

{% block root %}
    <ul class="vertical tabs my-account-menu" data-tabs id="example-tabs">
        <h3 class="my-account-menu-title">{{ item.label|trans }}</h3>
        <hr>
        {{ block('list') }}
    </ul>

    <a href="{{ path('app_frontend_logout') }}" class="app-logout-button">{{ 'sylius.ui.logout'|trans }}</a>
{% endblock %}

{% block list %}
    {% for item in item.children %}
        {{ block('item') }}
    {% endfor %}
{% endblock %}

{% block item %}
    <li class="tabs-title">
        <a href="{{ item.uri }}">
            {{ block('icon') }}
            {{ item.label|trans }}
        </a>
    </li>
{% endblock %}

{% block icon %}
    {% set icon = item.labelAttribute('icon') %}
    {% if icon %}<i class="{{ icon }}"></i> {% endif %}
{% endblock %}
