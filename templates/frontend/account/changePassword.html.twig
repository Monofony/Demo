{% extends 'frontend/account/layout.html.twig' %}

{% form_theme form 'frontend/form/theme.html.twig' %}

{% block breadcrumb %}
    <nav aria-label="You are here:" role="navigation" class="breadcrumb">
        <ul class="breadcrumbs">
            <li><a href="{{ path('app_frontend_homepage') }}" class="section">{{ 'sylius.ui.home'|trans }}</a></li>
            <li><a href="{{ path('sylius_frontend_account_dashboard') }}" class="section">{{ 'sylius.ui.my_account'|trans }}</a></li>
            <li><span class="show-for-sr">Current: </span>{{ 'sylius.ui.change_password'|trans }}</li>
        </ul>
    </nav>
{% endblock %}

{% block subcontent %}
    <div class="change-password">
        <div class="grid-x title-container">
            <div class="cell small-2">
                <div id="change-password-logo" class="hide-for-small-only">
                    <i class="fas fa-lock"></i>
                    <i class="fas fa-pencil-alt"></i>
                </div>
            </div>
            <div class="cell auto">
                <h3 class="title">{{ 'sylius.ui.change_password'|trans }}</h3>
                <h4 class="subtitle">{{ 'app.ui.you_are_right_security_first'|trans }}</h4>
            </div>
        </div>
        {{ form_start(form, {'action': path('sylius_frontend_account_change_password')}) }}
        <input type="hidden" name="_method" value="PUT"/>
        <div class="grid-x align-justify grid-form">
            <div class="cell medium-12">
                {{ form_row(form.currentPassword) }}
            </div>
            <div class="cell medium-12">
                {{ form_row(form.newPassword.first) }}
                <h5>{{ 'app.ui.at_least_4_characters_long'|trans }}</h5>
            </div>
            <div class="cell medium-12">
                {{ form_row(form.newPassword.second) }}
            </div>
            <div class="cell medium-12">
                <button type="submit" class="ui large button">{{ 'sylius.ui.save_changes'|trans }}</button>
            </div>
        </div>
        {{ form_row(form._token) }}
        {{ form_end(form, {'render_rest': false}) }}
    </div>
{% endblock %}
