{% import 'backend/macro/image.html.twig' as images %}

{% set pet_path = path('app_frontend_pet_show', { 'slug': pet.slug }) %}

<div id="pet-card" class="card">
    <div class="image">
        {% if pet.firstImage is not null %}
            {% set path = vich_uploader_asset(pet.firstImage, 'file') %}
            <a href="{{ pet_path }}">{{ images.render(path, 'pet_grid', pet.name) }}</a>
        {% endif %}
    </div>
    <div class="content">
        <a id="pet-card-name" class="header" href="{{ pet_path }}">{{ pet.name }}</a>
        <div class="meta">
            <a id="pet-card-taxon" href="{{ path('app_frontend_pet_per_taxon_index', { 'slug': pet.taxon.slug }) }}">{{ pet.taxon.name }}</a>
        </div>
    </div>
</div>
