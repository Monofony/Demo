{% set labels, values = bookings_summary.months, bookings_summary.values %}

{% if labels and values %}
    <div class="ui grid">
        <div class="column">
            <h3 class="ui top attached header">{{ 'app.ui.bookings_summary'|trans }}</h3>
            <div class="ui attached segment" style="height: 400px;">
                <canvas id="dashboard-chart" data-labels="{{ labels|json_encode() }}" data-values="{{ values|json_encode() }}"></canvas>
            </div>
        </div>
    </div>
{% endif %}
